let FilterEvenNumbers=(arr)=>(arr.filter((ele)=>ele%2==0));

let sumOfArray=(arr)=>(arr.reduce((acc,cur)=>acc+cur));

let sortAndConcat=(arr1,arr2)=>{
  arr1.sort((a,b)=>a-b);
  arr2.sort((a,b)=>a-b);
  return arr1.concat(arr2);
}
console.log("Filtered Array: ",FilterEvenNumbers([6,3,8,14,2]));
console.log("\nArray Sum: ",sumOfArray([10,1,9,4,20]));
console.log("\nSorted & Concated array: ",sortAndConcat([6,3,8,14,2],[10,1,9,4,20]));
